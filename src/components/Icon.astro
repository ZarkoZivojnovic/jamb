---
import type { IconType } from '@/types'

export interface Props {
  icon: IconType
}

const { icon } = Astro.props
---

{
  icon === 'min-max' && (
    <svg height='16' width='16' version='1.1' id='Layer_1' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 425 425' xml:space='preserve'>
      <g>
        <polygon fill='var(--color-1)' points='212.5,0 19.371,192.5 405.629,192.5 	' />
        <polygon fill='var(--color-1)' points='212.5,425 405.629,232.5 19.371,232.5 	' />
      </g>
    </svg>
  )
}
{
  icon === 'top-bottom' && (
    <svg height='16' width='16' version='1.1' id='Layer_1' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 425 425' xml:space='preserve'>
      <g>
        <polygon fill='var(--color-1)' points='212.5,192.5 405.629,0 19.371,0' />
        <polygon fill='var(--color-1)' points='212.5,232.5 19.371,425 405.629,425' />
      </g>
    </svg>
  )
}
{
  icon === 'down' && (
    <svg height='16' width='16' version='1.1' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 386.257 386.257' xml:space='preserve'>
      <polygon fill='var(--color-1)' points='0,96.879 193.129,289.379 386.257,96.879' />
    </svg>
  )
}
{
  icon === 'free' && (
    <svg height='16' width='16' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 477.427 477.427' xml:space='preserve'>
