        <polygon fill='var(--color-1)' points='160,20 95,20 95,370 20,370 128.289,477.427 236,370 160,370' />
        <polygon fill='var(--color-1)' points='457,120 349.138,10 241,119 310,120 310,477 379,477 379,120' />
      </g>
    </svg>
  )
}
{
  icon === 'up' && (
    <svg height='16' width='16' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 386.257 386.257' xml:space='preserve'>
      <polygon fill='var(--color-1)' points='193.129,96.879 0,289.379 386.257,289.379' />
    </svg>
  )
}
