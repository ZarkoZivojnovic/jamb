---
import Layout from '@/Layout.astro'
import Board from '@/components/Board.astro'

const { slug } = Astro.params

if (!slug) {
  return Astro.redirect('/')
}

const code = slug.toLowerCase()
---

<Layout {code}>
  <Board {code} />
</Layout>

<style lang='scss'>
  :global(.history-link) {
    margin-right: auto !important;
  }
</style>
